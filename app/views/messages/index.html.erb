<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="pannel-body">
        
                <% @messages.each do |message| %>
                    
                    <div class="col-sm-4">
                        名前:
                        <span class="label label-info"><%= message.name %></span>
                    </div>
                    
                    <div class="col-sm-4">
                        年齢は
                        <%= message.age %>才です。
                        (<%= link_to "edit" , edit_message_path(message) %>
                        <%= link_to "destroy" , message , method: :delete, data: { confirm:'削除してもよろしいでしょうか？' } %>
                        )
                    </div>
                    
                    <div class="col-sm-4">
                        内容：
                        <%= message.body %>
                        (<%= link_to "edit" , edit_message_path(message) %>
                        <%= link_to "destroy" , message , method: :delete, data: { confirm:'削除してもよろしいでしょうか？' } %>
                        )
                    </div>
                    
                    
                <% end %>
	      
    </div>

<% #部分テンプレートを読み込んでいる%>
<%= render 'form' %>