<div class="panel panel-default">
    <div class="panel-default">
        メッセージ一覧
    </div>
    
    <div class="pannel-body">
        <div class="container-fluid">
	        <div class="row">
                <% @messages.each do |message| %>
                    <div class="col-sm-2">
                        <span class="label label-info"><%= message.name %></span>
                    </div>
                    <div class="col-sm-10">
                        <%= message.body%>
                    </div>
                <% end %>
	        </div>
        </div>
    </div>
</div>



<%= form_for(Message.new, :html => {:class => 'form-horizontal'}) do |f| %>

    <div class="form-group">
        <label for="name1" class="col-sm-2 control-label">名前:</label>
        <div class="col-sm-8">
            <%= f.text_field :name,class:"form-control",placeholder:"名前を入力してくれたまえ" %>
        </div>
    </div>
    
    <div class="form-group">
        <label for="body1" class="col-sm-2 control-label">内容:</label>
        <div class="col-sm-8">
            <%= f.text_area :body,class:"form-control",placeholder:"内容を入力してくれたまえ" %>
        </div>
    </div>

        <%= f.submit "送信",class:"btn btn-sm btn-primary" %>

<% end %>


