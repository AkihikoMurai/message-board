<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="pannel-body">
        
                <% @messages.each do |message| %>
                    名前：
                    <div class="col-sm-4">
                        
                        <span class="label label-info"><%= message.name %></span>
                    </div>
                    年齢：
                    <div class="col-sm-4">
                        
                        <%= message.age %>
                        (<%= link_to "edit" , edit_message_path(message) %>
                        <%= link_to "destroy" , message , method: :delete, data: { confirm:'削除してもよろしいでしょうか？' } %>
                        )
                    </div>
                    内容：
                    <div class="col-sm-4">
                        
                        <%= message.body %>
                        (<%= link_to "edit" , edit_message_path(message) %>
                        <%= link_to "destroy" , message , method: :delete, data: { confirm:'削除してもよろしいでしょうか？' } %>
                        )
                    </div>
                    
                    
                <% end %>
	      
    </div>

<% #部分テンプレートを読み込んでいる%>
<%= render 'form' %>