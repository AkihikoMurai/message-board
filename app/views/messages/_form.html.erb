<%= form_for(@message, :html => {:horizontal => true}) do |f| %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                <li>
                    <%= full_message %>
                </li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <div class="form-group">
        <label for=name1" class="col-sm-2" controll-label">名前:</label>
        <div class="col-sm-8">
            <%= f.text_field :name , class="form-controll", placeholder:"What's your name?" %>
        </div>
    </div>
    
    <div class="form-group">
        <label for="age1" class="col-sm-2 controll-label">年齢:</label>
        <div class="col-sm-8">
            <%= f.text_field :age , class:"form-controll" , placeholder:"How old are you?" %>
        </div>
    </div>
    
    <div class="form-group">
        <label for="body1" class="col-sm-2 control-label">内容:</label>
        <div class="col-sm-8">
            <%= f.text_area :body , class:"form-control" , placeholder:"What's up?" %>
        </div>
    </div>
    
    <%= f.submit "送信" , class:"btn btn-sm btn-primary" %>
    <br>
    <br>

<% end %>    